<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fh.kaernten.estimotelocate">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".EstimoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/gray_estimote"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.ListRoomsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ListBeaconsActivity" />
        <activity android:name=".activities.IndoorLocationActivity" />
        <activity android:name=".activities.DefineRoomActivity" />
        <activity android:name=".activities.TestActivity" />
        <activity android:name=".activities.ListTestResultsActivity" />
        <activity
            android:name=".activities.MapRoomToBeaconActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".alarm.AlarmBroadcastReceiver" />
        <service
            android:name=".alarm.AlarmIntentService"
            android:enabled="true" />
    </application>
</manifest>